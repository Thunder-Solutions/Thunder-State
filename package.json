{
  "name": "thunder-state",
  "version": "0.0.1",
  "description": "[![standard-readme compliant](https://img.shields.io/badge/standard--readme-OK-green.svg?style=flat-square)](https://github.com/RichardLitt/standard-readme)",
  "main": "index.js",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "bumpp": "^8.2.1"
  },
  "scripts": {
    "build:core": "pnpm -F=@thunder-state/core run build",
    "build:react": "pnpm -F=@thunder-state/react run build",
    "build": "pnpm run build:core && pnpm run build:react",
    "test:core": "pnpm -F=@thunder-state/core test",
    "test:react": "pnpm -F=@thunder-state/react test",
    "test": "pnpm run test:core && pnpm run test:react",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "start": "npx tsx fixtures/demoServer.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thunder-Solutions/Thunder-State.git"
  },
